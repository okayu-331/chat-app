<div class="chat_header">
  <div class="header_room_name">
    room_name
  </div>
  <div class="delete_room">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="messages">
  <div class="message">
    <div class="upper_message">
      <div class="message_user">
        なまえ
      </div>
      <div class="message_date">
        2020/8/3(Mon) 12:00:00
      </div>
    </div>
    <div class="lower_message">
      <div class="message_content">
        hello world
      </div>
    </div>
  </div>
  <div class="message">
    <div class="upper_message">
      <div class="message_user">
        なまえ名前
      </div>
      <div class="message_date">
        2020/8/3(Mon) 12:00:00
      </div>
    </div>
    <div class="lower_message">
      <div class="message_content">
        hello world again
      </div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image-file">画像<span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<%end%>
